<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Perfil"
    android:orientation="vertical"
    android:background="@drawable/fondo2">

    <ImageButton
        android:id="@+id/volver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/next2"
        android:background="@null"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:fontFamily="sans-serif-black"
        android:text="Perfil"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="145dp"
        android:layout_height="148dp"
        app:srcCompat="@drawable/grupo323"
        android:layout_marginTop="-70dp"
        android:layout_marginLeft="140dp"
        android:background="@drawable/borderwhite"
        />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="46dp"
        android:layout_height="47dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="-60dp"
        android:background="@drawable/stylebutton2"
        app:srcCompat="@drawable/editar1"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-black"
        android:textIsSelectable="false"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="80dp"
        />

    <EditText
        android:id="@+id/nombrePerfil"
        android:layout_width="299dp"
        android:layout_height="38dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/borderbuttonblue"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correo:"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-black"
        android:textIsSelectable="false"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="25dp"
        />

    <EditText
        android:id="@+id/correoPerfil"
        android:layout_width="299dp"
        android:layout_height="39dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/borderbuttonblue"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="64dp"
        android:layout_height="51dp"
        android:background="@drawable/style_border_edit"
        app:srcCompat="@drawable/basura1"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar cuenta"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-black"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="-35dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar cambios"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="120dp"
        app:cornerRadius="20dp"
        app:strokeColor="@color/blue"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:fontFamily="@font/poppinsbold"

        />



</LinearLayout>