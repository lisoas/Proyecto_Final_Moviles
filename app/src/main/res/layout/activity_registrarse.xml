<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registrarse"
    android:background="@drawable/app002"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="105dp"
        android:layout_height="92dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/grupo109"
        />


    <ImageButton
        android:id="@+id/opcionMujer"
        android:layout_width="104dp"
        android:layout_height="56dp"
        android:background="@drawable/style_border_edit"
        app:srcCompat="@drawable/grupo122"
        android:layout_gravity="center"/>

    <ImageButton
        android:id="@+id/opcionHombre"
        android:layout_width="104dp"
        android:layout_height="61dp"
        android:background="@drawable/style_border_edit"
        app:srcCompat="@drawable/grupo123"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:fontFamily="sans-serif-light"
        />
    <TextView
        android:id="@+id/campoNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:fontFamily="sans-serif-light"
        android:background="@drawable/style_border_edit"

        />
    <TextView
        android:id="@+id/contrasenia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ContraseÃ±a"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:fontFamily="sans-serif-light"
        />

    <EditText
        android:id="@+id/campoContrasenia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:background="@drawable/style_border_edit"

        />
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Correo"
        android:fontFamily="sans-serif-light"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:textSize="30dp"
        />

    <EditText
        android:id="@+id/campoCorreo"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:background="@drawable/style_border_edit"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textSize="30dp"
        />

    <Button
        android:id="@+id/iniciar"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/style_border_edit"
        android:backgroundTint="@color/white"
        android:fontFamily="sans-serif-light"
        android:text="Registrarse"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/se_te_olvido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Al registrarse seras parte del equipo ihu!"
        android:layout_marginLeft="60dp"
        android:textColor="@color/black"
        android:textSize="18dp" />




</LinearLayout>