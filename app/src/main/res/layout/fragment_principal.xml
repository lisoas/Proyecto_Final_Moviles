<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".principalFragment"
    android:background="@drawable/app003"
    >

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="47dp"
            android:layout_marginLeft="0dp"
            android:background="@drawable/borderwhite"
            android:src="@drawable/app302"

            />

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@drawable/grupo246" />

    </LinearLayout>

    <ImageView

        android:id="@+id/imageView4"
        android:layout_width="145dp"
        android:layout_height="148dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08"
        app:srcCompat="@drawable/grupo323"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="343dp"
        android:layout_height="41dp"
        android:fontFamily="@font/poppinsbold"
        android:text="¿Que plataforma deseas usar?"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.235"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.368"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/meet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.58"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/comoseutilizameetparahacervideollamadas"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="423dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/poppinsbold"
        android:gravity="start"
        android:text="¿Cómo se utiliza Meet para hacer videollamadas?"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.756"
        app:strokeColor="@color/white"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/comograbartusvideoconferencias"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppinsbold"
        android:gravity="start"
        android:text="¿Cómo grabar tus videoconferencias?"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.123"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.821"
        app:strokeColor="@color/white"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/comoprogramarunavideollamada"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:fontFamily="@font/poppinsbold"
        android:gravity="start"
        android:text="¿Cómo programar una videollamada?"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.89"
        app:strokeColor="@color/white"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>